// Assumed: SystemCommand, SystemEvent, EventType.

public class SystemController {
    private EventBus eventBus;

    public SystemController(EventBus eventBus) {
        this.eventBus = eventBus;
    }

    public void executeCommand(SystemCommand cmd) {
        // Dispatch to Sanidhaya
        eventBus.publishEvent(new SystemEvent(EventType.SYSTEM_COMMAND, "Anthony", cmd));
    }

    public void startSimulation() {
        SystemCommand cmd = new SystemCommand();
        cmd.type = CommandType.START_SIMULATION;
        cmd.timestamp = System.currentTimeMillis();
        executeCommand(cmd);
    }

    public void stopSimulation() {
        SystemCommand cmd = new SystemCommand();
        cmd.type = CommandType.STOP_SIMULATION;
        cmd.timestamp = System.currentTimeMillis();
        executeCommand(cmd);
    }

    // Configuration dispatchers (called indirectly via ControlPanel)
    public void sendNetworkConfig(NetworkConfiguration config) {
        eventBus.publishEvent(new SystemEvent(EventType.NETWORK_CONFIG, "Anthony", config));
    }

    public void sendBehaviorConfig(BehaviorConfiguration config) {
        eventBus.publishEvent(new SystemEvent(EventType.BEHAVIOR_CONFIG, "Anthony", config));
    }
}
